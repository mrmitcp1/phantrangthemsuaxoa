<form method="post" action="/staffs/<%= staff.id %>/update">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" value="<%= staff.name %>" name="name">
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" value="<%= staff.city %>" class="form-control" name="city">
    </div>
    <div class="form-group">
        <label>EXP</label>
        <input type="number" value="<%= staff.exp %>" class="form-control" name="exp">
    </div>
    <div class="form-group">
        <label>Salary</label>
        <input type="number" value="<%= staff.salary %>" class="form-control" name="salary">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
